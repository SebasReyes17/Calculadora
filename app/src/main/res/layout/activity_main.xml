<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtvRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtvOpera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="textView4" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"

        >


        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="0"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="4"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/btnpunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="."
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="Ans"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnres"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="="
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="4"
            android:layout_row="6"
            android:layout_column="1" />

        <Button
            android:id="@+id/btnpor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="%"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="0"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/bnt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="9"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnmult"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="x"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="1"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="3"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="2"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="3"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnresta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@android:color/darker_gray"
            android:text="-"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnsuma"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="+"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="8"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="1"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="/"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnDEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="DEL"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="0"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="AC"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="4"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="6"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="7"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="1" />

    </GridLayout>
</LinearLayout>